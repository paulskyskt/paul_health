<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paul.dao.CheckItemDao">
        <insert id="add" parameterType="com.paul.pojo.CheckItem">
            insert into t_checkitem(code,name,sex,age,price,type,remark,attention)values(#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
        </insert>


    <select id="selectByCondition" resultType="com.paul.pojo.CheckItem" parameterType="string">
        select * from t_checkitem
        <if test="value !=null and value.length > 0 ">
            where code = #{value} or name = #{value}
        </if>
    </select>


    <delete id="deleteById" parameterType="int">
            delete from t_checkitem where id = #{id}
    </delete>

    <select id="findCountByCheckItemId" parameterType="int" resultType="long">
        select count(*) from t_checkgroup_checkitem where checkitem_id = #{checkitem_id}
    </select>
</mapper>
